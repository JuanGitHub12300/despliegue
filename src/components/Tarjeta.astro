---
import ContenidoTarjeta from "./ContenidoTarjeta.astro"
import Airplanet from "./icons/Airplanet.astro"
import Discover from "./icons/Discover.astro"
import About from "./icons/About.astro"
---

<div class="flex flex-wrap"> 
    <ContenidoTarjeta class="md:pt-12 pt-6 w-full md:w-4/12 px-4 text-center" bgcircle="bg-[#ff8040]" icono = {Airplanet} 
    title = "Paquetes turísticos" description = "Descubre nuestros paquetes turísticos diseñados para explorar la belleza natural y cultural de Imbabura" tipoRopa="#paquetesTuristicos"></ContenidoTarjeta>
    <ContenidoTarjeta class = "w-full md:w-4/12 px-4 text-center" bgcircle="bg-[#e2b27b]" icono = {Discover} 
    title = "Descubre Imbabura" description = "Imbabura, más conocida como la 'Provincia de los Lagos'. Un destino perfecto para aventuras únicas y momentos inolvidables en contacto con la naturaleza." tipoRopa="#descubreImbabura"></ContenidoTarjeta>
    <ContenidoTarjeta class = "md:pt-12 pt-6 w-full md:w-4/12 px-4 text-center" bgcircle="bg-[#9e4a24]" icono = {About} 
    title = "Acerca de nosotros" description = "Somos un equipo apasionado por compartir las maravillas de Imbabura y un viaje inolvidable junto a usted" tipoRopa="#nosotros"></ContenidoTarjeta>
</div>
